{% extends 'base.html.twig' %}

{% block body %}

    <article>
        <h2>{{ element.title }}</h2>
        
        <div class="metadata">Créé le {{ element.createdAt | date('d/m/Y') }} à  {{ element.createdAt | date('H:i') }}</div>
        
        <div class="content">
            {{ element.content | raw }}
        </div>

        <section id="taches">
            {% for uneTache in element.Taches %}
                <div class="tache">
                    <div class="row">
                        
                        <div class="col-3">
                            {% if uneTache.Done %}    
                                Faite
                            {% else %}
                                Pas faite
                            {% endif %}
                        </div>
                        
                        <div class="col-3">
                            Pour le {{uneTache.DueDate | date('d/m/Y')}}
                        </div>
                        
                        <div class="col">
                            {{uneTache.description | raw}}
                        </div>

                        <button class="nav-item">
                        <a class="nav-link" href="{{path('task_edit', {'id': uneTache.id})}}">Modifier la tâche</a>
                        </button>
                        
                        <button class="nav-item">
                            <a class="nav-link" href='{{  path('delete_task', {'id': uneTache.id}) }}'>Supprimer la tâche</a>
                        </button>
                    </div>
                </div>
            {% endfor %}
        </section>

    </article>
{% endblock %}